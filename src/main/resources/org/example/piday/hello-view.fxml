<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.piday.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Pane fx:id="drawingPane" />
    <Label fx:id="welcomeText"/>
    <Button fx:id="button1" text="New Question" onAction="#onButton1Click"/>
    <TextField fx:id="fieldAnswer" text="" />
    <Button fx:id="submit" text="submit" onAction="#submitClicked"/>
    <Label fx:id="errorValue"/>
</VBox>
